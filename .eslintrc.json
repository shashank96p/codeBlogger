{
  "env": {
    "node": true,
    "commonjs": true,
    "es2020": true
  },
  "extends": [
    "eslint:recommended",
    "prettier",
    "plugin:node/recommended",
    "eslint-config-prettier"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "auto"
      }
    ],
    "no-process-exit": "off",
    "no-console": "warn",
    "no-unused-vars": "off"
  }
}
